version: "3"
services:
  app:
    image: "{{ IMAGE_NAME }}:latest"
    container_name: "{{ DOMAIN_NAME }}"
    ports:
      - "8000:8000"
    env_file:
      - .env
    depends_on:
      - redis
    restart: always
  redis:
    image: redis:latest
    container_name: redis-container
    ports:
      - "6379:6379"
    restart: always
